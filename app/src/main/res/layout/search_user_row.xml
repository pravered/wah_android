<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <wahCustomViews.view.WahImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/user_placeholder"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        app:is_circular="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            fontPath="fonts/roboto/Roboto-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="John Appleseed"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/signup_location"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/signup_location"
                android:singleLine="true"
                android:textColor="#B34A4A4A"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/user_trips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/journal_small"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/journal_small"
                android:textColor="#B34A4A4A"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>