<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/search_trip_image"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/round_corner_image_mask"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/trip_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:text="Day 01"
            android:gravity="center_vertical|left"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/trip_day">

            <!--<TextView-->
                <!--android:id="@+id/trip_day"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:textColor="@color/white"-->
                <!--android:text="3 Day"-->
                <!--android:gravity="center"/>-->

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/white"
                android:text="99 KM"
                android:gravity="center"/>

            <TextView
                android:id="@+id/check_ins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="12 Check-Ins"
                android:gravity="center"/>

            <TextView
                android:id="@+id/photos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="13 Photos"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>