<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weareholidays.bia.activities.journal.trip.ChangeImageActivity">

    <include
        android:id="@+id/journal_bar"
        layout="@layout/journal_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/journal_bar"
        android:layout_centerHorizontal="true"
        android:background="#e0e0e0"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trip_name"
            android:hint="@string/Trip_name_placeholder"
            android:textColorHint="@color/app_light_grey"
            android:textSize="20dp"
            android:textColor="@color/app_light_grey"
            android:textCursorDrawable="@null"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/app_light_grey"
        android:layout_alignBottom="@+id/relativeLayout"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#fff"
        fontPath="fonts/roboto/Roboto-Bold.ttf"
        android:textSize="15dp"
        android:id="@+id/btn_save"
        android:background="@color/app_orange"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
