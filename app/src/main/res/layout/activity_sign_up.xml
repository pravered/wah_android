<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.weareholidays.bia.activities.login.SignUpActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_signup_background" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/screen_padding_triple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_above="@+id/head3"
        android:layout_marginTop="@dimen/screen_padding_triple"
        android:gravity="center_horizontal"
        android:text="@string/signup_header"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <!-- roboto regular -->
    <LinearLayout
        android:id="@+id/referral_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screen_padding_triple"
        android:layout_above="@+id/head3"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <wahCustomViews.view.WahImageView
            android:id="@+id/referrar_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/user_placeholder"
            app:img_border_color="@color/white"
            app:img_border_width="2dp"
            app:is_circular="true" />

        <TextView
            android:id="@+id/referrar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="assaas"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/head3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/screen_padding"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Create trip journals effortlessly"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/signup_facebook"
            fontPath="fonts/roboto/Roboto-Bold.ttf"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:alpha="0.75"
            android:background="@drawable/facebook_button"
            android:drawableLeft="@drawable/loginscreen_facebook"
            android:drawablePadding="-55dp"
            android:drawableStart="@drawable/loginscreen_facebook"
            android:paddingLeft="60dp"
            android:text="@string/signup_facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <Button
            android:id="@+id/signup_email"
            fontPath="fonts/roboto/Roboto-Bold.ttf"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/transparent_button"
            android:padding="10dp"
            android:text="@string/signup_email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_email"
            fontPath="fonts/roboto/Roboto-Bold.ttf"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/transparent_button"
            android:padding="10dp"
            android:text="@string/login_email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forgot_password"
            fontPath="fonts/roboto/Roboto-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="By signing up you agree to WeAreHolidays "
            android:textColor="@color/white_disclaimer"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Terms of Use "
                android:textColor="@color/white_disclaimer"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&amp; Privacy Policy"
                android:textColor="@color/white_disclaimer"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
