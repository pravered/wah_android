<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.weareholidays.bia.activities.search.DiscoverOuterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:layout_width="fill_parent"
        android:id="@+id/discover_tabs"
        app:tabTextAppearance="@style/DiscoverTabTextAppearance"
        app:tabIndicatorColor="@color/orange_primary"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/discover_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>