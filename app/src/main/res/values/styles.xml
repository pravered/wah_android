        <item name="colorPrimary">@color/orange_primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/orange_primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/orange_accent</item>
        <item name="colorButtonNormal">@color/orange_primary</item>
        <item name="buttonStyle">@style/My.Button</item>
        <item name="colorControlNormal">#A5A5A5</item>
        <item name="colorControlActivated">#A5A5A5</item>
        <item name="colorControlHighlight">#A5A5A5</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
